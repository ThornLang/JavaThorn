export $ assertTrue(condition, message) {
    if (!condition) {
        print("ASSERTION FAILED: " + message);
        print("Expected: true");
        print("Actual: false");
        // TODO: Once we have proper exceptions, throw an AssertionError
    }
}

export $ assertFalse(condition, message) {
    if (condition) {
        print("ASSERTION FAILED: " + message);
        print("Expected: false");
        print("Actual: true");
    }
}

export $ assertEqual(expected, actual, message) {
    if (expected != actual) {
        print("ASSERTION FAILED: " + message);
        print("Expected: " + expected);
        print("Actual: " + actual);
    }
}

export $ assertNotEqual(expected, actual, message) {
    if (expected == actual) {
        print("ASSERTION FAILED: " + message);
        print("Expected values to be different, but both were: " + actual);
    }
}


export $ assertNull(value, message) {
    if (value != null) {
        print("ASSERTION FAILED: " + message);
        print("Expected: null");
        print("Actual: " + value);
    }
}

export $ assertNotNull(value, message) {
    if (value == null) {
        print("ASSERTION FAILED: " + message);
        print("Expected: non-null value");
        print("Actual: null");
    }
}
