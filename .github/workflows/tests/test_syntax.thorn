$ add(a, b) {
    return a + b;
}

square = $(x) => x * x;
multiply = $(a, b) => a * b;

class Calculator {
    $ init(initial) {
        this.value = initial;
    }
    
    $ add(n) {
        this.value = this.value + n;
        return this.value;
    }
    
    $ get_value() {
        return this.value;
    }
}

